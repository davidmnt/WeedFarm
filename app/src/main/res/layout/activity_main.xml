<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.MainActivity"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/menu_mejoras"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/selector_btn_mejora_planta"

        app:layout_constraintEnd_toStartOf="@id/scrollMejora"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/Planta"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/selector_btn_planta"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/puntuacion"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/Planta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

<ScrollView
    android:id="@+id/scrollMejora"
    android:layout_width="255dp"
    android:layout_height="800dp"
    android:background="@drawable/backgorund_mejora"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="parent">
    <LinearLayout
        android:id="@+id/linearMenu"
        android:layout_width="255dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="MEJORAS"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="30sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/mejora_planta"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Mejora lvl 1"
            android:textSize="24sp"
            android:backgroundTint="@color/red"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/mejora_planta2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Mejora lvl 1"
            android:textSize="24sp"
            android:backgroundTint="@color/red"
            android:layout_marginTop="50dp"
            />





    </LinearLayout>
</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>